$breakpoint = 1300px

flex-version = flex
support-for-ie = true
vendor-prefixes = official

@import 'nib'
@import 'rupture'
@import 'jeet'

.admin-container {
  
  .body {
    width calc(100% - 280px)
    margin-left 280px
    
    +below($breakpoint){
      width 100%
      margin-left 0
    }

  }
}
  
.main-sidebar-toggle {
  display inline-block
  position fixed
  size(30px)
  background-color alpha(#4e3d69, .95)
  top 10px
  left 240px
  z-index 99
  
  &:after {
    content ''
    position absolute
    display inline-block
    size(40%)
    top 50%
    left 50%
    transform translate3d(-30%, -50%, 0) rotate(45deg)
    border-color white
    border-style: solid;
    border-width: 0 0 3px 3px;
  }
  
  &.collapsed {
    left 10px
    &:after {
      transform translate3d(-80%, -50%, 0) rotate(45deg)
      border-width: 3px 3px 0 0;
    }
  }
  
  +below($breakpoint){
    left 10px
    &:after {
      transform translate3d(-80%, -50%, 0) rotate(45deg)
      border-width: 3px 3px 0 0;
    }
    
    &.collapsed {
      left 240px
      &:after {
        transform translate3d(-30%, -50%, 0) rotate(45deg)
        border-width: 0 0 3px 3px;
      }
    }
  }
}

.main-sidebar {
  width 280px
  background-color: #4e3d69;
  color: white;
  padding 0
  position fixed
  top 0
  left 0
  bottom 0
  overflow-y auto
  box-shadow 2px 0 4px alpha(black, .3)
  z-index 98
  
  
  &.collapsed {
    display none
    
    & + .body {
      width 100%
      margin-left 0
    }
  }

  +below($breakpoint){
    display none
    
    &.collapsed {
      display block
    }
  }

  small.divider {
    padding 10px
    margin 25px 0 5px
    display inline-block
    font-size 10px
    font-weight 500
  }
  
  .nav-sidebar {
    margin 0    

    li {
      margin-bottom 1px
    }
    
    li a {
      color white
      background-color alpha(black, .18)
      padding 15px 20px
      font-weight 600
      
      i.fa {
        font-size 20px
        margin-right 7px
      }
      
      &:hover {
        color #4e3d69
      }
    }
    
    .blue a {
      background-color #3d7ead
      color #4e3d69
    }
    .orange a {
      background-color #b8895b
      color #4e3d69
    }
    .green a {
      background-color #7b9c47
      color #4e3d69
    }
    
    a:hover,
    a.active {
      background-color #eee !important
    }
  }
  
  .main-sidebar-header {
    display flex
    align-items center
    justify-content center
    padding 20px 0 15px
    background-color alpha(white, .2)
  }
  
  .main-sidebar-profile-container {
    position relative
    
    &:after {
      display block
      content ''
      padding-bottom 100%
    }
  }
  
  .main-sidebar-profile {
    display flex
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    flex-direction column
    
    .user-info {
      padding 15px
      
      p {
        margin 0
        
        &.name {
          font-size 16px    
        }
        
        &.id {
          font-size 12px
          color alpha(white, .8)
        }
      }
      
      a {
        color white
      }
    }
    
    .user-photo-container {
      flex 1
      
      display flex
      align-items center
      justify-content center
      
      img {
        width 45%
        border-radius 50%
        border 4px solid white
      }
      
      .icons {

        p {
          display flex
          align-items center
          font-size 16px
          
          &.middle {
            padding-left 13px
          }
        }
        i.fa {
          font-size 18px
          padding 5px
          border 3px solid white
          border-radius 50%
          display flex
          align-items center
          justify-content center
          margin-right 6px
        }
      }
    }

  }
}